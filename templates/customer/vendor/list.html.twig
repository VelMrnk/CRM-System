{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label for="search_vendor">{{ 'customer.search.search'|trans({}, 'labels') }}:</label>
                        <input type="text"
                               class="form-control"
                               data-path="{{ path('vendor_search') }}"
                               data-block="content_list"
                               data-counter="content_counter"
                               name="search_text"
                               id="search_vendor"
                               placeholder="{{ 'customer.vendor.search_by_placeholder'|trans({}, 'labels') }}"
                        >
                    </div>
                    <div class="col-sm-6 vertical-table-text">
                        <p class="vertical-text">{{ 'customer.search.records_found'|trans({}, 'labels') }}:
                            <span id="content_counter">{{ vendors|length }}</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="datatable-ajax-source">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr role="row" class="heading-style">
                        <th>{{ 'customer.vendor.name'|trans({}, 'labels') }}</th>
                        <th>{{ 'customer.vendor.status'|trans({}, 'labels') }}</th>
                    </tr>
                    </thead>
                    <tbody id="content_list">
                        {% if vendors|length %}
                            {% for vendor in vendors %}
                                <tr>
                                    <td>
                                        <a class="website-link" href="{{ path('vendor_edit', { id: vendor.id }) }}">
                                            {{ vendor.name|upper }}
                                        </a>
                                    </td>
                                    <td>
                                        {% if vendor.isActive %}
                                            <label class="label label-info">{{ 'table.active'|trans({}, 'labels') }}</label>
                                        {% else %}
                                            <label class="label label-warning">{{ 'table.inactive'|trans({}, 'labels') }}</label>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="100"></td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        $('#search_vendor').keyup(function ()
        {
            var searchField = $(this),
                url = searchField.attr('data-path'),
                searchText = searchField.val(),
                block = $('#' + searchField.attr('data-block')),
                counter = $('#' + searchField.attr('data-counter'));

            $.ajax({
                url: url,
                type: "POST",
                data: { searchText: searchText },
                success: function (response) {
                    var data = jQuery.parseJSON(response);

                    block.html(data.template);
                    counter.html(data.counter);
                },
                error: function (response) {
                    counter.html(0);
                }
            });
        });
    </script>
    <style>
        .label-info, .label-warning {
            width: 60px;
        }
    </style>
{% endblock scripts %}
