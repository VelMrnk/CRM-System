                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group {% if form.isActive.vars.errors | length > 0 %} has-error {% endif %}">
                        {{ form_label(form.isActive) }}
                        <div class="col-md-10 col-sm-9 col-xs-7">
                            {% if not form.isActive.vars.valid %}
                                {{ form_widget(form.isActive, {'attr' : {'data-placement' : 'top', 'title' : form.isActive.vars.errors[0].message, 'class' : 'form-control tip tip-open'}}) }}
                            {% else %}
                                {{ form_widget(form.isActive)}}
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-3 col-xs-5 control-label">{{ 'table.save'|trans({}, 'labels') }}</label>
                        <div class="col-md-10 col-sm-9 col-xs-7">
                            <span id="form-status"><button type="submit" class="btn btn-success btn-icon btn-save"><i class="icon-floppy-disk"></i></button></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-3 col-xs-5 control-label">{{ 'table.delete'|trans({}, 'labels') }}</label>
                        <div class="col-md-10 col-sm-9 col-xs-7">
                            <button type="button" data-path="{{ path('customer_product_delete', {id : form.vars.value.id}) }}" data-toggle="modal" href="#small_modal" class="btn btn-danger btn-icon btn-delete"> <i class="icon-trash"></i></button>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        {% endfor %}
    {% endif %}

    {{ include ("modal/delete-modal.html.twig") }}
{% endblock body %}

{% block scripts %}
    <link href="{{ asset('css/table_vertical.css') }}" rel="stylesheet" type="text/css">
    <style>
        @media
        only screen and (max-width: 760px),
        (min-device-width: 768px) and (max-device-width: 1024px)  {
            .table-vertical td:nth-of-type(1):before { content: "Plant"; }
            .table-vertical td:nth-of-type(2):before { content: "Name"; }
            .table-vertical td:nth-of-type(3):before { content: "Description"; }
            .table-vertical td:nth-of-type(4):before { content: "Price"; }
            .table-vertical td:nth-of-type(5):before { content: "Category"; }
            .table-vertical td:nth-of-type(6):before { content: "Weight"; }
            .table-vertical td:nth-of-type(7):before{ content: "{{ 'table.active'|trans({}, 'labels') }}"; }
            .table-vertical td:nth-of-type(8):before{ content: "{{ 'table.save'|trans({}, 'labels') }}"; }
            .table-vertical td:nth-of-type(9):before{ content: "{{ 'table.delete'|trans({}, 'labels') }}"; }
        }
    </style>
{% endblock scripts %}
