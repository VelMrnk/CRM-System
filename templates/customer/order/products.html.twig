            <div class="panel panel-default{% if key is divisible by (2) %} row-style{% endif %}">
                {{ form_start(form, {'action': path('customer_product_update', {id : form.vars.value.id}), 'attr': {'class': 'form-horizontal', 'role' : 'form'} }) }}
                <div class="panel-body">
                    <div class="form-group {% if form.plant.vars.errors | length > 0 %} has-error {% endif %}">
                        {{ form_label(form.plant) }}
                        <div class="col-md-10 col-sm-9 col-xs-7">
                            {% if not form.plant.vars.valid %}
                                {{ form_widget(form.plant, {'attr' : {'data-placement' : 'top', 'title' : form.plant.vars.errors[0].message, 'class' : 'select tip tip-open'}}) }}
                            {% else %}
                                {{ form_widget(form.plant)}}
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group {% if form.name.vars.errors | length > 0 %} has-error {% endif %}">
                        {{ form_label(form.name) }}
                        <div class="col-md-10 col-sm-9 col-xs-7">
                            {% if not form.name.vars.valid %}
                                {{ form_widget(form.name, {'attr' : {'data-placement' : 'top', 'title' : form.name.vars.errors[0].message, 'class' : 'form-control tip tip-open'}}) }}
                            {% else %}
                                {{ form_widget(form.name)}}
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group {% if form.description.vars.errors | length > 0 %} has-error {% endif %}">
                        {{ form_label(form.description) }}
                        <div class="col-md-10 col-sm-9 col-xs-7">
                            {% if not form.description.vars.valid %}
                                {{ form_widget(form.description, {'attr' : {'data-placement' : 'top', 'title' : form.description.vars.errors[0].message, 'class' : 'form-control tip tip-open'}}) }}
                            {% else %}
