                        {{ form_widget(form.description)}}
                    {% endif %}
                </div>
            </div>
            <div class="form-group {% if form.weight.vars.errors | length > 0 %} has-error {% endif %}">
                {{ form_label(form.weight) }}
                <div class="col-md-10 col-sm-9 col-xs-7">
                    {% if not form.weight.vars.valid %}
                        {{ form_widget(form.weight, {'attr' : {'data-placement' : 'top', 'title' : form.weight.vars.errors[0].message, 'class' : 'form-control tip tip-open'}}) }}
                    {% else %}
                        {{ form_widget(form.weight)}}
                    {% endif %}
                </div>
            </div>
            <div class="form-group {% if form.price.vars.errors | length > 0 %} has-error {% endif %}">
                {{ form_label(form.price) }}
                <div class="col-md-10 col-sm-9 col-xs-7">
                    {% if not form.price.vars.valid %}
                        {{ form_widget(form.price, {'attr' : {'data-placement' : 'top', 'title' : form.price.vars.errors[0].message, 'class' : 'form-control tip tip-open'}}) }}
                    {% else %}
                        {{ form_widget(form.price)}}
                    {% endif %}
                </div>
            </div>
            <div class="form-group {% if form.category.vars.errors | length > 0 %} has-error {% endif %}">
                {{ form_label(form.category) }}
                <div class="col-md-10 col-sm-9 col-xs-7">
                    {% if not form.category.vars.valid %}
                        {{ form_widget(form.category, {'attr' : {'data-placement' : 'top', 'title' : form.category.vars.errors[0].message, 'class' : 'select tip tip-open'}}) }}
                    {% else %}
                        {{ form_widget(form.category)}}
                    {% endif %}
                </div>
            </div>
            <div class="form-group {% if form.isActive.vars.errors | length > 0 %} has-error {% endif %}">
                {{ form_label(form.isActive) }}
                <div class="col-md-10 col-sm-9 col-xs-7">
                    <div class="checkbox checkbox-switchery table-switch">
                        {{ form_widget(form.isActive)}}
                    </div>
                </div>
            </div>
            <div class="form-actions text-right">
                <button type="submit" class="btn btn-action">{{ 'button.add'|trans({}, 'labels') }}</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

