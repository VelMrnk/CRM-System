<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
    </head>
    <body>
        <table class="table">
            <thead>
            <tr style="text-align: left;">
                <th style="padding: 5px 20px;">{{ 'setup.crops.plant_name'|trans({}, 'labels') }}</th>
                <th style="padding: 5px 20px;">{{ 'product.description'|trans({}, 'labels') }}</th>
                <th style="padding: 5px 20px;">{{ 'product.price'|trans({}, 'labels') }}</th>
            </tr>
            </thead>
            <tbody>
            {%  for key, product in products %}
                <tr>
                    <td style="padding: 5px 20px;">{{ product.plant.fullname }}</td>
                    <td style="padding: 5px 20px;">{{ product.description }}</td>
                    <td style="padding: 5px 20px;">${{ product.price }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </body>
</html>