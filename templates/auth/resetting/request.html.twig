{% extends "front-layout.html.twig" %}

{% block body %}
    <div class="login-form">
        <form action="{{ path('app_resetting_send_email') }}" method="POST">
            <div class="panel panel-body login-form">
                <div class="text-center">
                    <h5 class="content-group">{{ 'resetting.forgot_password'|trans({}, 'messages') }}</h5>
                </div>

                <div class="form-group has-feedback has-feedback-right">
                    <input type="text"
                           class="form-control"
                           id="username"
                           name="username"
                           required="false"
                           title="{{ 'login.username'|trans({}, 'messages') }}"
                           placeholder="{{ 'login.username'|trans({}, 'messages') }}" autofocus/>
                    <div class="form-control-feedback">
                        <i class="icon-user text-muted"></i>
                    </div>
                </div>
                <div class="text-center">
                    <div class="form-group">
                        <input type="submit" class="btn-website btn-main" value="{{ 'button.send'|trans({}, 'labels') }}" />
                    </div>
                    <div class="content-divider text-muted form-group">
                        <span>{{ 'register.have_account'|trans({}, 'messages') }}</span>
                    </div>
                    <a href="{{ path('app_login') }}" class="btn-website btn-main content-group">
                        {{ 'login.login'|trans({}, 'messages') }}
                    </a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}