{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-head">
            <h6><i class="icon-lock2"></i>{{ 'error.403.title'|trans({}, 'messages') }}</h6>
        </div>

        <div class="panel-body">
            <p>{{ 'error.403.message'|trans({}, 'messages') }}</p>
            <p class="text-warning">{{ message|raw }}</p>
            <div class="text-center">
                <div class="row">
                    <div class="col-md-12">
                        <a href="{{ path('subscription_index') }}" class="btn btn-action">{{ 'error.403.button'|trans({}, 'messages') }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}