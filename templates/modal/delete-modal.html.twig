{% block window %}
    <!-- Small modal -->
    <div id="small_modal" class="modal fade">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <button type="button" id='delete_modal_close' class="close">&times;</button>
                    <h6 class="modal-title">{{ 'modals.delete.title'|trans({}, 'messages') }}</h6>
                </div>

                <div class="modal-body">
                    <p>{{ 'modals.delete.message'|trans({}, 'messages') }}</p>
                </div>

                <div class="modal-footer">
                    <button id='delete_modal_no' class="btn btn-link">{{ 'button.close'|trans({}, 'labels') }}</button>
                    <button id='delete_modal_yes' class="btn btn-action">{{ 'button.yes'|trans({}, 'labels') }}</button>
                    <div class="data-area" id="data-area"></div>
                </div>
            </div>
        </div>
    </div>
<!-- /small modal -->
{% endblock window %}
