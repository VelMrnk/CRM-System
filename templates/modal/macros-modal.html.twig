<!-- Small modal -->
<div id="macros_modal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" id='delete_modal_close' class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><i class="icon-accessibility"></i> Macros</h4>
            </div>
            <div class="modal-body with-padding">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            {% for groupName, macrosGroup in macros %}
                                <div class="col-md-{{ 12 / (macros | length) }}">
                                    <span class="list-group-item borderless text-semibold">{{ ('emails.macros.' ~ groupName)|trans({}, 'labels') }}</span>
                                    <ul class="list-group">
                                        {% for key, macro in macrosGroup %}
                                            <li class="list-group-item borderless">
                                                <label class="control-label checkbox-info">
                                                    <input type="checkbox" name="macros[]" class='form-control styled' value="{{ '{' ~ key ~ '}' }}">
                                                   { {{ macro }} }
                                                </label>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="text-right form-actions">
                    <button id='pasteMacros' class="btn btn-action">Paste</button>
                    <div class="data-area" id="data-area"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /small modal -->